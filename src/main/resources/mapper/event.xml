<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dodam.hotel.repository.interfaces.EventRepository">
	
	<insert id="insert">
		insert into event_tb(start_date,end_date,title,content)
		values(#{startDate},#{endDate},#{title},#{content});
	</insert>
	
	<select id="findByAll" resultType="com.dodam.hotel.repository.model.Event">
		select * from event_tb
		order by start_date desc;
	</select>

	<select id="findById" resultType="com.dodam.hotel.repository.model.Event">
		select * from event_tb
		where id= #{id};
	</select>
	
	<update id="updateEvent">
		update event_tb
		set start_date = #{startDate}, end_date = #{endDate}, title = #{title}, content = #{content}
		where id = #{id};
	</update>
	
	<delete id="deleteById">
		delete from event_tb where id = #{id};
	</delete>
</mapper>